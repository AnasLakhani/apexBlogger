<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_icon_3"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/account"
        app:layout_constraintBottom_toBottomOf="@+id/account_icon"
        app:layout_constraintStart_toEndOf="@+id/account_icon"
        app:layout_constraintTop_toTopOf="@+id/account_icon" />

    <View
        android:id="@+id/account_separate"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/account_icon"
        app:layout_constraintTop_toBottomOf="@+id/account_icon" />

    <ImageView
        android:id="@+id/privacy_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="@+id/account_icon"
        app:layout_constraintTop_toBottomOf="@+id/account_separate"
        app:srcCompat="@drawable/security_icon" />

    <TextView
        android:id="@+id/privacy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/privacy"
        app:layout_constraintBottom_toBottomOf="@+id/privacy_icon"
        app:layout_constraintStart_toEndOf="@+id/privacy_icon"
        app:layout_constraintTop_toTopOf="@+id/privacy_icon" />

    <View
        android:id="@+id/privacy_separate"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/account_separate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/privacy_icon"
        app:layout_constraintTop_toBottomOf="@+id/privacy_icon" />


    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/privacy_icon"
        app:layout_constraintTop_toBottomOf="@+id/privacy_separate"
        app:srcCompat="@drawable/info_icon"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/about"
        app:layout_constraintBottom_toBottomOf="@+id/about_icon"
        app:layout_constraintStart_toEndOf="@+id/about_icon"
        app:layout_constraintTop_toTopOf="@+id/about_icon" />

    <View
        android:id="@+id/about_separate"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/account_separate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/about_icon"
        app:layout_constraintTop_toBottomOf="@+id/about_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>